{
  "name": "hairfy-whatsapp",
  "description": "Sistema completo de barbearia com WhatsApp",
  "repository": "https://github.com/olucasvolk/hairfy",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "whatsapp", "barbershop", "react"],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": {
      "description": "Skip Chromium download",
      "value": "true"
    },
    "PUPPETEER_EXECUTABLE_PATH": {
      "description": "Puppeteer executable path",
      "value": "/app/.apt/usr/bin/google-chrome-stable"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Deploy completed successfully!'"
  }
}